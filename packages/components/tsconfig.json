{
  "extends": "@heather-turano-coaching/typescript/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts", ".eslintrc.js"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "target": "ES5",
    "module": "CommonJS"
  },
  "exclude": ["src/**/*.stories.ts", "src/**/*.stories.tsx"]
}

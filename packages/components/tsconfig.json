{
  "extends": "@heather-turano-coaching/typescript/tsconfig.react.json",
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "exclude": ["**/*.spec.ts", "**/*.stories.tsx"]
}

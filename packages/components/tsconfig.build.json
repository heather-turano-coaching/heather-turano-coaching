{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "noEmit": false,
    "declaration": true,
    "allowJs": false,
    "isolatedModules": false,
    "jsx": "react"
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": ["src/**/*.stories.*", "src/**/*.test.*"]
}

{
  "extends": "@heather-turano-coaching/typescript/tsconfig.json",
  "include": [
    "types.d.ts",
    "graphql",
    "graphql/**/*.ts",
    ".eslintrc.js",
    ".",
    "tests"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "rootDir": ".",
    "strict": true,
    "noEmit": true,
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "typeRoots": [
      "node_modules/@types",
      "types",
      "types.d.ts",
      "../../node_modules/@types"
    ]
  }
}

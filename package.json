{
  "name": "@heather-turano-coaching/heather-turano-coaching",
  "version": "1.0.0",
  "description": "All applications and source code for https://livelifemindful.com",
  "main": "index.js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/@prisma/**",
      "@prisma/**",
      "**/@nexus/**",
      "@nexus/**",
      "graphql/**",
      "**graphql**/**"
    ]
  },
  "scripts": {
    "postinstall": "npm rebuild sharp",
    "clean": "lerna clean --yes && lerna exec -- rimraf lib/ dist/",
    "bootstrap": "lerna bootstrap --hoist && rimraf **/@types/react-native",
    "bootstrap:ci": "lerna bootstrap --hoist",
    "version": "lerna version --yes",
    "reset": "yarn clean && yarn bootstrap",
    "release": "yarn build && lerna publish --yes",
    "compile": "lerna run compile",
    "check": "lerna exec -- npx npm-check-updates",
    "update": "lerna exec -- npx npm-check-updates -u",
    "format": "prettier --write \"packages/**/src/**/*.{js,jsx,json,md,ts,tsx}\"",
    "test": "jest",
    "prestart": ". .env",
    "lint:fix": "eslint './packages/**/src/**/*.js' --fix",
    "dev:core": "lerna run dev --scope=@heather-turano-coaching/core",
    "dev:api": "lerna run dev --scope=@heather-turano-coaching/api --stream",
    "dev:website": "yarn build:core && lerna run dev --scope=@heather-turano-coaching/website",
    "dev:mindful-movement": "yarn build:core && cd packages/websites/mindful-movement && yarn start",
    "dev:packages": "yarn build:core && cd packages/websites/packages && yarn start",
    "dev:storybook": "yarn build:core && cd ./packages/core && yarn build-storybook",
    "build:core": "lerna run build --scope=@heather-turano-coaching/core",
    "build:mindful-movement": "yarn build:core && lerna run build --scope=@heather-turano-coaching/mindful-movement --stream",
    "build:packages": "yarn build:core && lerna run build --scope=@heather-turano-coaching/packages --stream",
    "build:api": "cd packages/api && yarn build",
    "build:website:dev": "yarn build:core && cd packages/websites/next && yarn build",
    "build:website:prod": "yarn build:core && cd packages/websites/next && yarn next export",
    "start:website:dev": "cd packages/websites/next && yarn start",
    "start:api": "lerna run start --scope=@heather-turano-coaching/api --stream",
    "generate:api": "lerna run generate --scope=@heather-turano-coaching/api --stream",
    "generate:domain": "lerna run generate --scope=@heather-turano-coaching/domain --stream",
    "create-migration": "cd packages/api && yarn migrate -- ",
    "run-migrations": "cd packages/api && yarn migrate:up",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:imaginedelements/heather-turano-coaching/live-life-mindful.git"
  },
  "keywords": [
    "live-life-mindful",
    "live",
    "life",
    "mindful",
    "heather-turano-coaching",
    "heather",
    "turano"
  ],
  "resolutions": {
    "graphql": "14.7.0",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0"
  },
  "author": "Drew DeCarme (drew@imaginedelements.com)",
  "license": "ISC",
  "devDependencies": {
    "lerna": "3.22.1"
  },
  "dependencies": {
    "styled-components": "^5.2.0"
  }
}

{
  "compilerOptions": {
    // old
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "baseUrl": "./", // import directly from the root directory
    "paths": {
      "@htc/components/*": ["src/components/*"],
      "@htc/design-system": ["src/design-system/index.ts"],
      "@htc/documents/*": ["src/documents/*"],
      "@htc/domain/*": ["src/domain/*"],
      "@htc/icons": ["src/icons/index.ts"],
      "@htc/images": ["src/images"],
      "@htc/lib/*": ["src/lib/*"],
      "@htc/theme": ["src/theme/index.ts"],
      "@htc/utils": ["src/hooks/index.ts"]
    },
    "strict": true,
    "isolatedModules": true,
    // new
    "downlevelIteration": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "./.eslintrc.js",
    "./getContentfulEnvironment.js",
    "./next.config.js",
    "./babel.config.js",
    "./types/**.d.ts"
  ],
  "exclude": ["node_modules"]
}
